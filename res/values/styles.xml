<resources>
    <style name="blackText">
        <item name="android:textColor">#000000</item>
        <!--<item name="android:textColor">#FFFFFF</item>-->
    </style>

    <style name="simpleBlackText" parent="blackText">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="work_time_today" parent="blackText">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- currently working styles -->
    <style name="currently_working" parent="blackText">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="currently_working_yes" parent="blackText">
        <item name="android:textColor">#CB0000</item> <!-- red -->
    </style>
    <style name="currently_working_no" parent="blackText">
        <item name="android:textColor">#008ECB</item> <!-- blue -->
    </style>
</resources>